{
  "extends": "airbnb",
  "rules": {
    "comma-dangle": ["error", "never"],
    "space-before-function-paren": ["error", "always"],
    "no-use-before-define": ["error", {"functions": false}],
    "spaced-comment": ["error", "always", { "exceptions": ["*"] }],
    "func-names": ["error", "never"],
    "global-require:": 0
  }
}
